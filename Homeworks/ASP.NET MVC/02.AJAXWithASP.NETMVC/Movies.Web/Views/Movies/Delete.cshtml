@model Movies.Web.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<div class="card-panel s4">
    <div class="row">
        <div class="col offset-s3 s6 center">
            <h5>Are you sure you want to delete this movie?</h5>
            <ul>
                <li>NAME: <b>@Model.Title</b></li>
                <li>YEAR: <b>@Model.Year</b></li>
                <li>STUDIO NAME: <b>@Model.StudioName</b></li>
                <li>ADDRESS: <b>@Model.StudioAddress</b></li>
            </ul>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center center">
            <input type="submit" value="Delete" class="btn red" />
            @Html.ActionLink("Back to List", "Index",null, null, new {@class = "btn lime" })
        </div>
    }
</div>

